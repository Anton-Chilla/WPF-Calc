<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Calculator" Margin="2" MaxHeight="450" MaxWidth="350" Background="Transparent" WindowState="Normal">
    <Grid Margin="1" Background=" #1E1E1E" >
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button
            x:Name="firstBt"
            Content="1"
            Grid.Row="4"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>
        <Button
            x:Name="secondBt"
            Content="2"
            Grid.Row="4"
            Grid.Column="1"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>
        <Button
            x:Name="thirdBt"
            Content="3"
            Grid.Row="4"
            Grid.Column="2"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>
        <Button
            x:Name="fourthBt"
            Content="4"
            Grid.Row="3"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>
        <Button
            x:Name="fifthBt"
            Content="5"
            Grid.Row="3"
            Grid.Column="1"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>
        <Button
            x:Name="sixthBt"
            Content="6"
            Grid.Row="3"
            Grid.Column="2"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>
        <Button
            x:Name="seventhBt"
            Content="7"
            Grid.Row="2"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>
        <Button
            x:Name="eigthBt"
            Content="8"
            Grid.Row="2"
            Grid.Column="1"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>
        <Button
            x:Name="ninthBt"
            Content="9"
            Grid.Row="2"
            Grid.Column="2"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>
        <Button
            x:Name="delBt"
            Content="CE"
            Grid.Row="1"
            Grid.Column="3"
            Click="delBt_Click"
            Style="{StaticResource OperatorButtonStyle}"/>
        <Button
            x:Name="addBt"
            Content="+"
            Grid.Row="5"
            Grid.Column="3"
            Click="numBt_Click"
            Style="{StaticResource OperatorButtonStyle}"/>
        <Button
            x:Name="subBt"
            Content="-"
            Grid.Row="4"
            Grid.Column="3"
            Click="numBt_Click"
            Style="{StaticResource OperatorButtonStyle}"/>
        <Button
            x:Name="mulBt"
            Content="×"
            Grid.Row="3"
            Grid.Column="3"
            Click="numBt_Click"
            Style="{StaticResource OperatorButtonStyle}"/>
        <Button
            x:Name="divBt"
            Content="÷"
            Grid.Row="2"
            Grid.Column="3"
            Click="numBt_Click"
            Style="{StaticResource OperatorButtonStyle}"/>
        <Button
            x:Name="piBt"
            Content="π"
            Grid.Row="1"
            Grid.Column="2"
            Click="numBt_Click"
            Style="{StaticResource OperatorButtonStyle}"/>

        <Button
            x:Name="powBt"
            Content="^"
            Grid.Row="1"
            Grid.Column="1"
            Click="numBt_Click"
            Style="{StaticResource OperatorButtonStyle}"/>

        <Button
            x:Name="decPt"
            Content=","
            Grid.Row="5"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>
        <Button
            x:Name="zeroBt"
            Content="0"
            Grid.Row="5"
            Grid.Column="1"
            Click="numBt_Click"
            Style="{StaticResource BaseButtonStyle}"/>

        <Button
            x:Name="calcBt"
            Content="="
            Grid.Row="5"
            Grid.Column="2"
            Click="calBt_Click"
            Style="{StaticResource EqualsButtonStyle}"/>


        <TextBox
            x:Name="TbCalc"
            Grid.ColumnSpan="4" 
            VerticalAlignment="Center"
            FontSize="40"
            TextAlignment="Right" 
            Margin="0,0,10,0"
            Background="Transparent"
            BorderThickness="0"
            Foreground="White"
            />

        <TextBox
        x:Name="TbWayCalc"
        Grid.ColumnSpan="4" 
        VerticalAlignment="Top"
        HorizontalAlignment="Right"
        FontSize="20"
        TextAlignment="Right"
        Margin="0,0,10,0" Width="294"
        Background="Transparent"
        BorderThickness="0"
        Foreground="DarkGray"
/>
    </Grid>

</Window>
